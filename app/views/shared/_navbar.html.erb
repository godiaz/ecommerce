<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to :root, class: "navbar-brand" do %>
    <%= image_tag "shirt-guy.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "SHOP", shirts_path, class: "nav-link #{ params[:controller] == "shirts" ? "navbar-link-active" : "" }" %>
        </li>
        <li>
          <%= link_to "ACCOUNT", "/", class: "nav-link" %>
        </li>
        <li>
          <%= link_to "HOW IT WORKS", how_it_works_path, class: "nav-link #{ params[:controller] == "pages" && params[:action] == "how_it_works" ? "navbar-link-active" : "" }" %>
        </li>
        <li>
          <%= link_to "ABOUT US", about_us_path, class: "nav-link #{ params[:controller] == "pages" && params[:action] == "about_us" ? "navbar-link-active" : "" }" %>
        </li>
        <li style="margin-left: 30px;">
          <%= link_to basket_path, class: "nav-link" do %>
            <%= image_tag 'basket.png', width: 25 %>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_session_path, class: "nav-link" do %>
          <%= image_tag 'user.png', width: 25 %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
